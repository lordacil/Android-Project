<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/app_bar_admin">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="30dp"
        android:text="Selamat Datang"
        android:layout_marginTop="100dp"
        android:gravity="center"
        android:fontFamily="@font/gotham"/>

    <TextView
        android:id="@+id/textoperator"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="30dp"
        android:gravity="center"
        android:text="Admin"
        android:textColor="@color/petterriver"
        android:layout_marginTop="130dp"
        android:fontFamily="@font/gotham"/>

    <Button
        android:id="@+id/btn_webview"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/textoperator"
        android:layout_alignParentStart="true"
        android:layout_gravity="center"
        android:layout_marginStart="92dp"
        android:layout_marginTop="70dp"
        android:layout_marginBottom="15dp"
        android:background="@drawable/gradient"
        android:gravity="center"
        android:text="Masuk ke Login Page / Admin"
        android:textColor="@color/colorAccent"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btn_webview_dua"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn_webview"
        android:layout_alignParentStart="true"
        android:layout_gravity="center"
        android:layout_marginStart="92dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="15dp"
        android:background="@drawable/gradient"
        android:gravity="center"
        android:text="Masuk ke Login Page / Petugas"
        android:textColor="@color/colorAccent"
        android:textStyle="bold" />

</RelativeLayout>