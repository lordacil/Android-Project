<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.dicoding.rizkynugraha.cataloguemoviev2">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_logos"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_logos_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".SplashScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".MainActivity"/>
        <activity android:name=".DetailActivityMovie"
            android:parentActivityName=".MainActivity"></activity>
        <activity android:name=".DetailActivityTvShow"
            android:parentActivityName=".MainActivity"
            android:configChanges="orientation|keyboardHidden"></activity>
    </application>

</manifest>